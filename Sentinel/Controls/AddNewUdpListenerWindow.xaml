<Window x:Class="Sentinel.Controls.AddNewUdpListenerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Sentinel.Controls"
        Title="Add log4net UDP Listener"
        Icon="/Sentinel;component/Sentinel.ico"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <DockPanel Height="Auto"
               Margin="5">
        <StackPanel Orientation="Horizontal"
                    Height="36"
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Bottom"
                    Margin="0,10,0,0">
            <Button Content="_OK"
                    Command="{Binding OK}"
                    Width="80"
                    Margin="0,5"
                    IsDefault="True" />
            <Button Content="_Cancel"
                    Command="{Binding Cancel}"
                    Width="80"
                    Margin="5,5,0,5"
                    IsCancel="True" />
        </StackPanel>

        <Controls:AddLog4NetUdpListenerControl x:Name="details"
                                        TabIndex="1"
                                        IsTabStop="True"
                                        Focusable="False" />
    </DockPanel>
</Window>
